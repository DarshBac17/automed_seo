<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="version_modal_template" name="Version Modal">
        <div class="modal fade" id="versionModal" tabindex="-1" aria-labelledby="versionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="versionModalLabel">Save Version</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="versionName" class="form-label">Version Name</label>
                            <input type="text" class="form-control" id="versionName" required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="versionDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="versionDescription" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="saveVersion">Save Version</button>
                    </div>
                </div>
            </div>
        </div>
    </template>

</odoo>