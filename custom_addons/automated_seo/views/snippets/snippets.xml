<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="automed_snippets" inherit_id="website.snippets" name="Automed snippets">

        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">Automed SEO</div>
                <div class="o_panel_body">
                    <t t-snippet="automated_seo.salesforce_offers_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                    <t t-snippet="automated_seo.angular_offer_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                    <t t-snippet="automated_seo.hire_angular_offer_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                    <t t-snippet="automated_seo.schedule_interview_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                     <t t-snippet="automated_seo.trusted_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                     <t t-snippet="automated_seo.banner_static" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>offers, dynamic</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>