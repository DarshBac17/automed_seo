<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_php_variable_options" inherit_id="website.snippet_options">
        <xpath expr="//t[@t-call='website.snippet_options_background_options']" position="before">
            <div data-js="PhpVariableTextSelector" data-selector=".o_automated_seo_php_variable">
                <we-select string="PHP Variables" data-no-preview="true">
                    <we-button data-select-var="none" data-variable-class="" class="o_we_destroy_btn">None</we-button>
                    <we-button data-select-var="PHP_VAR_1" data-variable-class="php-var-1">PHP_VAR_1</we-button>
                    <we-button data-select-var="PHP_VAR_2" data-variable-class="php-var-2">PHP_VAR_2</we-button>
                    <we-button data-select-var="PHP_VAR_3" data-variable-class="php-var-3">PHP_VAR_3</we-button>
                    <we-button data-select-var="PHP_VAR_4" data-variable-class="php-var-4">PHP_VAR_4</we-button>
                </we-select>
            </div>
        </xpath>
    </template>
</odoo>