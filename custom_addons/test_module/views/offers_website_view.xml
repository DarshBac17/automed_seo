<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- offers form view -->
        <record id="test_module_offers_form_view" model="ir.ui.view">
            <field name="name">test_module.offers.form.view</field>
            <field name="model">test_module.offers</field>
            <field name="arch" type="xml">
                <form string="Offers">
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="description"/>
                            <field name="benefits"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- offers list or tree view -->
        <record id="test_module_offers_tree_view" model="ir.ui.view">
            <field name="name">test_module.offers.view</field>
            <field name="model">test_module.offers</field>
            <field name="arch" type="xml">
                <tree string="Offers">
                    <field name="title"/>
                    <field name="description"/>
                    <field name="benefits"/>
                </tree>
            </field>
        </record>

        <!-- offers Action for offers submenu -->
        <record id="test_module_offers_action" model="ir.actions.act_window">
            <field name="name">Offers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test_module.offers</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No offers yet!</p>
                <p>Please add a new offer!</p>
            </field>
        </record>


    </data>
</odoo>
