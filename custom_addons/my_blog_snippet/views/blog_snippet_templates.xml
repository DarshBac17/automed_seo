<odoo>
    <template id="my_blog_snippet.dynamic_blog_snippet_template">
        <div class="dynamic-blog-snippet">
            <t t-if="has_blogs">
                <t t-foreach="data_blogs" t-as="blog">
                    <div class="blog">
                        <t t-if="blog.get('image')">
                            <img t-att-src="'data:image/png;base64,' + blog['image']" alt="Blog Image"/>
                        </t>
                        <h3 t-esc="blog.get('title')"/>
                        <p t-esc="blog.get('content')"/>
                    </div>
                </t>
            </t>
            <t t-else="">
                <div class="no-blogs-message">
                    <p>No blog posts available at the moment. Check back later for updates!</p>
                </div>
            </t>
        </div>
    </template>
</odoo>