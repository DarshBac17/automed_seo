<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_snippets" inherit_id="website.snippets" name="Dynamic Blog Snippet">
        <xpath expr="//div[@id='snippet_structure']" position="inside">
            <div class="o_panel">
                <div class="o_panel_header">Salesforce offers for blog</div>
                <div class="o_panel_body">
                    <t t-snippet="my_blog_snippet.dynamic_blog_snippet_template"
                       t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>